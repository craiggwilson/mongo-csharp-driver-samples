@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>

<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <form role="form" action="@Url.Content("~/login")" method="post">
                    <div class="form-group">
                        <label for="email">Email: </label>
                        <input class="form-control" name="email" type="text" size="30" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password: </label>
                        <input class="form-control" name="password" type="password" size="30" />
                    </div>
                    <div class="form-group">
                        <input class="form-input" type="hidden" name="redirect" value="@Model.Redirect" />
                    </div>
                    <input class="btn-lg btn-primary" name="submit" type="submit" value="Login" />
                </form>
            </div>
        </div>
    </div>
</div>