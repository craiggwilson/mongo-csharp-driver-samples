@inherits NancyRazorViewBase<dynamic>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form role="form" action="@Url.Content("~/login")" method="post">
                <h2>Login</h2>
                <div class="form-group">
                    <label for="email">Email: </label>
                    <input class="form-control" name="email" type="text" size="30" />
                </div>
                <div class="form-group">
                    <label for="password">Password: </label>
                    <input class="form-control" name="password" type="password" size="30" />
                </div>
                <input class="btn-lg btn-primary" name="submit" type="submit" value="Login" />
            </form>
        </div>
    </div>
</div>
